/* pages/battle/battle.wxss */
.battle-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 30rpx;
}

.mode-selector {
  display: flex;
  background: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.mode-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.mode-item.active {
  color: #3366FF;
  font-weight: bold;
}

.mode-item.active::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #3366FF;
  border-radius: 2rpx;
}

/* 随机匹配模式 */
.matching-area {
  background: #fff;
  border-radius: 16rpx;
  padding: 60rpx;
  text-align: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 40rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.matching-status {
  margin-bottom: 40rpx;
}

.matching-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.countdown {
  font-size: 40rpx;
  color: #3366FF;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.start-btn, .cancel-btn {
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin: 0 auto;
}

.start-btn {
  background: #3366FF;
  color: #fff;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

/* 好友对战模式 */
.online-users {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.user-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.user-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.user-department {
  font-size: 24rpx;
  color: #999;
}

.invite-btn {
  min-width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #e6f0ff;
  color: #3366FF;
  font-size: 26rpx;
  border-radius: 32rpx;
  padding: 0 30rpx;
}

.invite-btn:active {
  opacity: 0.8;
}